[Unit]
Description=1C MCP SSL Search Server
After=docker.service network-online.target
Wants=docker.service network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/mcp
ExecStart=/usr/local/bin/docker compose up -d 1c-ssl
ExecStop=/usr/local/bin/docker compose stop 1c-ssl

[Install]
WantedBy=multi-user.target
